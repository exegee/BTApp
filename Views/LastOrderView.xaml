<UserControl x:Class="BTApp.Views.LastOrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BTApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="805">
    <Grid>
        <ListView ItemsSource="{Binding lastOrder}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Id" Width="200" DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Header="Długość" Width="100" DisplayMemberBinding="{Binding Length}"/>
                    <GridViewColumn Header="Ilość" Width="100" DisplayMemberBinding="{Binding Quantity}"/>
                    <GridViewColumn Header="Temperatura SPS" Width="100" DisplayMemberBinding="{Binding Heater}"/>
                    <GridViewColumn Header="Suma długości" Width="150" DisplayMemberBinding="{Binding SumLength}"/>
                    <GridViewColumn Header="Data dodania" Width="150" DisplayMemberBinding="{Binding ImportDate}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
