                            <TextBlock Style="{StaticResource HeaderText}" Text="Szybkość przewijania" HorizontalAlignment="Center"/>
                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource DataText}">
                                <Run Text="{Binding RecoilingSpeed}"/>
                                <Run Text=" m/min"/>
                            </TextBlock>
                        </StackPanel>

                        <!--ilość przewiniętej blachy-->
                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,10,0,0">
